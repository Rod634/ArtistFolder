{%extends "layout.njk"%}

{%block head%}
    <title>{{data.title}}</title>
{%endblock%}

{%block content%}
    <div class="container">
        <img class="profile" src="{{data.image}}" alt="Image of {{data.title}}">
        <h1>{{data.title}}</h1>
        <h2>{{data.role}}</h2>
        <p>{{data.description}}</p>
    </div>

    <footer>
        <div class="footer">
            {%for item in data.link%}
                <a href="{{item.link}}" target="_blank">{{item.name}}</a>
            {%endfor%}
        </div>
    </footer>
    
{%endblock%}